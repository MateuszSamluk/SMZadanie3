<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/task_item_checkBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/task_item_padding"
        android:layout_marginBottom="@dimen/bottom_padding"
        android:textColor="@color/purpleDark"
        android:singleLine="true"
        android:maxEms="10"
        style="@style/textStyle"/>

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_padding"
        android:textColor="@color/amber"
        style="@style/textStyle"/>

    <ImageView
        android:id="@+id/task_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@drawable/ic_house"
        />

</LinearLayout>